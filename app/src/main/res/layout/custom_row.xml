<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_in_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="3dp"
        android:src="@drawable/busicon"/>
    <TextView
        android:id="@+id/vehicleNo_tv_cr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="25sp"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_in_row"
        android:layout_alignBottom="@+id/imageView_in_row" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/greyline"
        android:layout_below="@+id/imageView_in_row"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>